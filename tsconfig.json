{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "lib": ["esnext", "dom"],
      "moduleResolution": "node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "typeRoots": ["types"],
      "baseUrl": "types",
      "declaration": false,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/dist/*", "libs"]
}
